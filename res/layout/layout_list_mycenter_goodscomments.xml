<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_mycenter_goodscomments_modify"
        style="@style/bg_top_background"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/btn_list_mycenter_goodscomments_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/state_press_btn_top_back" />

        <TextView
            style="@style/bg_top_text"
            android:text="请选择评价商品" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_mycenter_goodscomments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_mycenter_goodscommentslist_bottommenu"
        android:layout_below="@+id/rl_mycenter_goodscomments_modify"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/input_edit_448x74"
        android:cacheColorHint="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none" >
    </ListView>

    <RelativeLayout
        android:id="@+id/rl_mycenter_goodscommentslist_bottommenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
    </RelativeLayout>

</RelativeLayout>