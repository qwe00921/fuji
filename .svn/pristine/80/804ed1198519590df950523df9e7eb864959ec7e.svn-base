<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_shoppingmall_commentslist_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_shoppingmall_commentslist_committer"
            style="@style/font_content_medium_black"
            android:layout_marginRight="20dip"
            android:textColor="@color/bule" />

        <TextView
            android:id="@+id/tv_shoppingmall_commentslist_point"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/btn_bottom_207x63_horizontal"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_shoppingmall_commentslist_content"
        style="@style/font_content_medium_black"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip" />

    <TextView
        android:id="@+id/tv_shoppingmall_commentslist_date"
        style="@style/font_content_medium_gray"
        android:layout_marginLeft="10dip" />

</LinearLayout>